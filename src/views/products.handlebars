{{>nav}}
<h2>Productos</h2>
<hr>
<h3>Categoría</h3>
<div class="container">
<ul name="" id="">
    <li><a href="/products">Todos</a></li>
    {{#each categories}}
    <li><a href="/products?category={{this}}">{{this}}</a></li>
    {{/each}}
</ul>
<input type="text" value="{{cartUser}}" hidden id="cart">


    <div>
    <select id="sortSelect">
        <option selected disabled>Ordenar</option>
        <option value="asc">Precio: Menor a Mayor</option>
        <option value="desc">Precio: Mayor a Menor</option>
    </select>
    </div>
</div>
<ul id="prod">
    {{#each payload}}
    <li>
        {{title}} | {{category}} | <strong> ${{price}} </strong> | code: {{code}} | <button
            onclick="comprar ('{{_id}}')">Añadir al carrito</button>
    </li>
    {{/each}}
</ul>

<br><br>

<div class="container">
    <a href="/products?page=1">Pág. 1</a>
{{#if hasPrevPage}}
<a href="{{prevLink}}">Ant.</a>
{{/if}}


{{#if hasNextPage}}
<a href="{{nextLink}}">Sig.</a>
{{/if}}
<a href="/products?page={{totalPages}}">Última Pág.</a>
<h3> Pagina {{page}} / {{totalPages}}</h3>
<a href="/carts/{{cartUser}}">Ver carrito</a>
</div>


<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/socket.io/socket.io.js"></script>
<script src="/assets/js/products.js"></script>
